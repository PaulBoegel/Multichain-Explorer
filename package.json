    "test:litecoinService": "nodemon tests/services/litecoinNodeServiceHarness"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bitcoind-rpc": "^0.8.1",
    "express": "^4.17.1",
    "mongodb": "^3.5.8",
    "rpc-bitcoin": "^2.0.0",
    "zeromq": "^6.0.0-beta.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "numeral": "^2.0.6",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    }
  }
